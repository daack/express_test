div(class="ui middle aligned center aligned grid")
	div(class="column")
		h2(class="ui teal image header")
			div(class="content") Accedi

		form(class="ui large form login-form" action="/auth" method="POST")
			if error
				div(class="ui error message") #{error}
				
			div(class="ui stacked segment")
				div(class="field")
					div(class="ui left icon input")
						i(class="user icon")
						input(type="text" name="user" placeholder="Utente...")
				div(class="field")
					div(class="ui left icon input")
						i(class="lock icon")
						input(type="password" name="password" placeholder="Password")
				button(class="ui fluid large teal submit button") Login			
